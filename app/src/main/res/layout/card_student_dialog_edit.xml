<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 姓名 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姓名" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:id="@+id/sname"
        android:hint="请输入姓名" />

    <!-- 学号 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学号" />

    <EditText
        android:id="@+id/snum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="请输入学号" />

    <!-- 班级 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="班级" />

    <EditText
        android:id="@+id/scalss"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="请输入班级" />

    <!-- 学院 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学院" />

    <EditText
        android:id="@+id/scollege"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="请输入学院" />



    <!-- 修改按钮 -->
    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改" />

</LinearLayout>
